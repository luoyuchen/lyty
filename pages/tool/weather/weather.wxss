/**index.wxss**/

page{
  width:100%;
  height:100%;
  overflow-x:hidden;
}
text,view{
  color:#fff;
}

/************  主体部分  *************/
view{
  font-family:microsoft yahei,Arial,Helvetica, sans-serif;
}
.container{
  height:100%;
  padding:0;
  background:url(http://api.h6vr.com/cdn.h6vr.com/chwl/images/icon/bg.jpg) no-repeat center center/cover;
}
.scroll{
  height:100%;
}
.main-container{
  width:100%;
  height:1200rpx;
  position:relative;
}
.main-container swiper{
  width:100%;
  height:100%;
}
.main-container swiper-item{
  width:100%;
  height:100%;
}
.change{
  position:absolute;
  right:40rpx;
  top:40rpx;
  z-index:100;
  color:#fff;

}
/**返回按钮**/
.goBack{
  margin:22px 0 0 12px;
  color: #fff;
  background: rgba(255,255, 255, .1)
}
.main-section{
  width:500rpx;
  height:400rpx;
  position:absolute;
  left:50%;
  top:200rpx;
  margin-left:-250rpx;
  z-index:10;
  text-align: center;
  color:#fff;
}

/*.location .weather .temp .num .value高度后加*/
.main-section .location{
  font-size:50rpx;
}
.main-section .weather{
  font-size:32rpx;
  margin-top:16rpx;
}
.main-section .temp{
  font-size:150rpx;
}

.main-section .num,.main-section .value{
  display:inline-block;
  margin:0 6rpx;
}

/*图片*/
.main .slide-image{
  width:100%;
  height:100%;
  position:absolute;
  left:0;
  top:0;
  z-index:0;
}




/************  每天天气  *************/
.day-container{
  box-sizing: border-box;
  width:100%;
  height:320rpx;
  padding: 40rpx 30rpx;
  /*background:#FAFAFA;*/
  display:flex;
  justify-content:space-around;
  overflow:hidden;
  position:absolute;
  left:0;
  bottom:0;
}
.day-container .day{
  width:33.33%;
  overflow:hidden;
  text-align: center;
  align-content: center;
}
.day-container .date{
  font-size:30rpx;
  color:#fff;
}
.day-container .icon{
  font-size:34rpx;
  color:#fff;
  margin:20rpx 0;
}
.day-container .icon image{
  width:100rpx;
  height:100rpx;
}
.day-container .degree{
  font-size:24rpx;
  color:#fff;
}

/************  空气质量  *************/
.airvalue-container{
  box-sizing: border-box;
  width:100%;
  height:auto;
  padding: 40rpx 40rpx 30rpx 40rpx;
  /*background:#8DBEFA;*/
  margin-top:20rpx;
  overflow:hidden;
}

/*********** 左部分 **********/
.airvalue-left{
  float:left;
  width:30%;
  height:20rpx;
  font-size: 34rpx;
  color:#fff;
  text-align: left;
}
.airvalue-left .num{
  font-size:90rpx;
}

/*********** 右部分 **********/
.airvalue-right{
  float:left;
  width:70%;
}
.airvalue-right .progress-container{
  margin-bottom:30rpx;
  color:#fff;
}
.progress-container .pm{
  float:left;
  font-size:26rpx;
}
.progress-container .per{
  float:right;
  font-size:26rpx;
}
.progress-container progress{
  width:100%;
  padding-top:10rpx;
}

/** 描述 **/
.airvalue-right .describe{
  font-size:34rpx;
}
.airvalue-right .describe text{
  color:#fff;
  font-size:36rpx;
}


