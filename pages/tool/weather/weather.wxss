/*****************  服务  *******************/
.serve-container{
  box-sizing: border-box;
  width:100%;
  height:auto;
  padding:40rpx;
  /*
  margin-top:20rpx;
  */
  font-size: 32rpx;
  overflow:hidden;
}
.serve-container .items{
  box-sizing:border-box;
  width:100%;
  height:auto;
  padding-bottom: 20rpx;
  margin-bottom:10rpx;
  overflow:hidden;
  display:flex;
  align-items: center;
  /*border-bottom: 1px solid #fff;*/
}
.serve-container .items .left{
  width:240rpx;
}
.serve-container .items .pic{
  width:100%;
  height:150rpx;
  overflow:hidden;
  position:relative;
}
.serve-container .items .pic image{
  width:120rpx;
  height:120rpx;
  position:absolute;
  left:0;
  right:0;
  top:0;
  bottom:0;
  margin:auto;
}
.serve-container .items text{
  display: block;
  text-align: center;
}
.serve-container .items .sub{
  color:#fff;
}
.serve-container .items .dis{
  box-sizing: border-box;
  width:100%;
  padding:40rpx;
  vertical-align: middle;
  color:#fff;
}




