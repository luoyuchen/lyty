
page{
  width:100%;
  height:100%;
  background:url(http://api.h6vr.com/cdn.h6vr.com/chwl/images/icon/bg1.jpg) no-repeat center center/cover;
}

.city-container{
  width:100%;
  height:auto;
}
.search-coantainer{
  width:100%;
  height:70rpx;
  position:relative;
}
.search-coantainer input{
  box-sizing: border-box;
  width:90%;
  height:70rpx;
  border-radius: 50rpx;
  border:1px solid #fff;
  margin:30rpx auto;
  color:#fff;
  padding-left: 30rpx;
  line-height: 70rpx;
  position:relative;
}
.search-coantainer button{
  width:60rpx;
  height:70rpx;
  position:absolute;
  right:50rpx;
  top:0;
  z-index:10;
  background-color: transparent;
  background: url(http://api.h6vr.com/cdn.h6vr.com/chwl/images/weather/search.png) no-repeat center center/50%;
}

.hot-container{
  width:90%;
  height:auto;
  margin:30rpx auto;
  display: flex;
  flex-wrap: wrap;
  justify-content: center;
  align-content: center;
}
.hot-container button{
  width:160rpx;
  height:60rpx;
  background-color:transparent;
  border:1px solid #fff;
  border-radius: 40rpx;
  margin-bottom:30rpx;
  color:#fff;
  font-size: 14px;
  line-height: 60rpx;
}

