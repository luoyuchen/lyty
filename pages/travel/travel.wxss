/*pages/travel/travel.wxss*/
page{
    background-color: #f3f3f3;
}
.container{
    width:100%
}
.container .banner{
    width:100%;
    height: 300rpx;
}
.container .banner .bannerSwiper{
    width:100%;
    height:100%
}
/*导航按钮*/
.navList{
    background-color: #fff;
    width:100%;
    padding: 25rpx 0 20rpx 0;
    display: flex;
    flex-flow: row wrap;/*设置或检索伸缩盒对象的子元素超出父容器时是否换行*/
}
.navitem{
    width:33%;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    margin-bottom: 10rpx;
}
.navitem image{
    width: 100rpx;
    height:100rpx;
    margin-bottom: 10rpx;
}
.navitem text{
    font: 30rpx;
    color: #555;
    
}
/*热门*/

.container .hot{
    
    margin-top:20rpx;
    width: 100%;
    height: 100px;
    display: flex;
    justify-content: space-around;
    
   
}
.listtext{
   
    margin: 35rpx 0 35rpx 0;
    text-align: center;
    line-height: 50rpx;
    color: #ec6d51;
    font-size: 35rpx;
    font-family: microsoft yahei;
}
.hot image{width: 100%;height: 100%}
.headLineSwiper{
  width: 98%;
  height: 100%;
  line-height: 100rpx;
  font-size: 26rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.hoticon{
    width:20%;
    height: 100%;
}
.hotimg{
    width: 100%;
    height: 100%
}

/*四季*/

.container .season{
    width: 100%;
    height: 100%;
    margin-top: 15rpx;
    flex-direction: column
}
.inner{
    width: 98%;
    height: 250rpx;
    margin-left: 1%;
    margin-bottom: 20rpx;
    display: flex
}
